@{
    ViewData["Title"] = "Okul Ekle";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card" style="margin:auto;">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Okul Ekle</h4>
                    <form class="forms-sample" id="addSchoolForm">
                        <div class="form-group">
                            <label for="name">Okul Adı</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="cityName">İl</label>
                            <input type="text" class="form-control" id="cityName" name="cityName" required>
                        </div>
                        <div class="form-group">
                            <label for="districtName">İlçe</label>
                            <input type="text" class="form-control" id="districtName" name="districtName" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Adres</label>
                            <textarea type="text" class="form-control" id="address" name="address" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="phone">İletişim Numarası</label>
                            <textarea type="tel" class="form-control" id="phone" name="phone" placeholder="0XXX XXX XX XX" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="instructorName">Eğitmen adı</label>
                            <input type="text" class="form-control" id="instructorName" name="instructorName" required>
                        </div>
                        <div class="form-group">
                            <label for="instructorStatus">Eğitmen Derecesi</label>
                            <input type="text" class="form-control" id="instructorStatus" name="instructorStatus" required>
                        </div>
                        <div class="form-group">
                            <label for="instructorResume">Eğitmen Geçmişi</label>
                            <textarea type="text" class="form-control" id="instructorResume" name="instructorResume" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="timetable">Eğitim Saati</label>
                            <input type="text" class="form-control" id="timetable" name="timetable" required>
                        </div>
                        <div class="form-group">
                            <label for="photoPath">Kapak Resmi</label>
                            <input required type="file" class="form-control" name="file" id="file" accept=".jpg,.png,.jpeg">
                        </div>
                        <div class="form-group">
                            <label for="mapLink">Adres Linki (Google Maps)</label>
                            <input type="text" class="form-control" id="mapLink" name="mapLink" required>
                        </div>
                        <button class="btn btn-danger"><a href="@Url.Action("Index","School")" style="color:white;">İptal Ve Listeye Dön</a></button>
                        <button type="submit" class="btn btn-primary" style="float:right;">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/School/create.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/vendors/jquery-validation/jquery.validate.min.js"></script>
}
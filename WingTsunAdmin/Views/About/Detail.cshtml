@using Application.Helpers;
@{
    ViewData["Title"] = "Hakkımızda Detayı";
}
@model Application.Admin.DTOs.About.AboutDTO
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card" style="margin:auto;">
            <div class="card">
                <div class="card-body">
                    <a href="@Url.Action("Index","About")" style="color:red;float:right;">Listeye Dön</a>
                    <h4 class="card-title">Hakkımızda Detayı</h4>
                    <form class="forms-sample" id="viewAboutForm">
                        <input type="hidden" class="form-control" id="id" value="@Model.Id">
                        <div class="form-group">
                            <label for="name">Başlık</label>
                            <input type="text" class="form-control" id="title" name="title" value="@Model.Title" required>
                        </div>
                        <div class="form-group">
                            <label for="content">Metin</label>
                            <textarea type="text" class="form-control" id="text" name="text" required>@Model.Text</textarea>
                        </div>

                        <button type="submit" class="btn btn-primary" style="float:right;">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/About/view.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/vendors/jquery-validation/jquery.validate.min.js"></script>
}
@using Application.Helpers;
@using Domain.Common.Attributes;
@{
    ViewData["Title"] = "Hakkımızda Listesi";
}
@model IEnumerable<Application.Admin.Models.About.AboutIndexModel>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hakkımızda Listesi</h4>
                    <div class="table-responsive">
                        @if (Model != null && Model.Count() > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Oluşturma Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var about in Model.OrderByDescending(k => k.CreatedTime))
                                    {
                                        <tr>
                                            <td>@about.Title</td>
                                            <td>@(about.CreatedTime.ToShortDateString()) </td>
                                            <td>
                                                <a href="@Url.Action("detail", new{id = about.Id})" class="btn btn-success button-sm">Detay</a>
                                                <button data-id="@about.Id" type="button" class="btn btn-danger button-sm deleteButton">Sil</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>Kayıtlı hakkımızda alanı bulunmamaktadır.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/About/index.js" asp-append-version="true"></script>
}

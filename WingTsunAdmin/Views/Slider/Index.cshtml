@{
    ViewData["Title"] = "Slider Listesi";
}
@model IEnumerable<Application.Admin.Models.Slider.SliderViewModel>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Listesi</h4>
                    <div class="table-responsive">
                        @if (Model.Count() > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Resim</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slider in Model)
                                    {
                                        <tr>
                                            <td><img src="@ViewBag.WebUrl@slider.ImageUrl" style="height:200px;width:200px;" /></td>
                                            <td>@slider.Title</td>
                                            <td>@slider.Description</td>
                                            <td>
                                                @if (slider.IsActive == false)
                                                {
                                                    <label class="badge badge-danger">Pasif</label>
                                                }
                                                else
                                                {
                                                    <label class="badge badge-success">Aktif</label>
                                                }
                                            </td>
                                            <td>
                                                @if (slider.IsActive == false)
                                                {
                                                    <button  data-id="@slider.Id" type="button" class="btn btn-success button-sm changeStatus">Aktif Yap</button>
                                                }
                                                else
                                                {
                                                    <button data-id="@slider.Id" type="button" class="btn btn-danger button-sm changeStatus">Pasif Yap</button>
                                                }
                                                <button data-id="@slider.Id" type="button" class="btn btn-danger button-sm deleteButton">Sil</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>Kayıtlı slider bulunmamaktadır.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/Slider/index.js" asp-append-version="true"></script>
}

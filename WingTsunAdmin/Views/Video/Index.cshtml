@model IEnumerable<Application.Admin.Models.Video.VideoViewModel>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Video Listesi</h4>
                    <div class="table-responsive">
                        @if (Model.Count() > 0)
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Video</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var video in Model)
                                    {
                                        <tr>
                                            <td><iframe width="320" height="200" src="@video.Path" frameborder="0" allowfullscreen></iframe></td>
                                            <td>
                                                @if (video.IsDeleted == true)
                                                {
                                                    <label class="badge badge-danger">Pasif</label>
                                                }
                                                else
                                                {
                                                    <label class="badge badge-success">Aktif</label>
                                                }
                                            </td>

                                            <td>
                                                @if (video.IsDeleted == true)
                                                {
                                                    <button data-id="@video.Id" type="button" class="btn btn-success button-sm changeStatus">Aktif Yap</button>
                                                }
                                                else
                                                {
                                                    <button data-id="@video.Id" type="button" class="btn btn-danger button-sm changeStatus">Pasif Yap</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>Kayıtlı video bulunmamaktadır.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/Video/index.js" asp-append-version="true"></script>
}
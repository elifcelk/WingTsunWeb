@{
    ViewData["Title"] = "Galeri";
    var index = 0;
}
@model IEnumerable<Application.Models.GalleryModel>
<header class="site-header site-gallery-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-10 col-12 mx-auto">
                <h3 class="text-white">Galeri</h3>
            </div>

        </div>
    </div>

    <div class="overlay"></div>
</header>

<section>
    <div class="col-lg-12">
        <br /><br />
        <div class="row">
            @if (Model.Count() > 0)
            {
                <div class="text-center" id="bxslider-gallery" style=" width: 1000px;margin:auto;left: 50%;padding: 30px;">
                    <ul class="bxslider-gallery">
                        @foreach (var gallery in Model)
                        {
                            <li><img src="@gallery.PhotoPath" style="margin:auto;" /></li>
                        }
                    </ul>
                </div>
                
                <div id="bx-pager">
                    <br />
                    @foreach (var data in Model)
                    {
                        <a data-slide-index="@index" href=""><img src="@data.PhotoPath" width="72" height="72" /></a>

                        index = index + 1;
                    }
                    
                </div>
                
            }
            else
            {
                <p>Görsel bulunmamaktadır</p>
            }
        </div>
        <br />
    </div>


</section>
@section Scripts{
    <script src="~/lib/bxSlider/js/bxslider.min.js" asp-append-version="true"></script>
    <script>
        $('.bxslider-gallery').bxSlider({
            pagerCustom: '#bx-pager',
            slideWidth: 700,
            slideMargin: 10
        });
    </script>
}
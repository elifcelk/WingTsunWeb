@model IEnumerable<Application.Models.ContactIndexModel>

<header class="site-header site-contact-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-10 col-12 mx-auto">
                <h3 class="text-white">İletişim</h3>
            </div>

        </div>
    </div>
    <div class="overlay"></div>
</header>

<section class="school section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
                <h6>Eğitim Koordinatörleri:</h6><br />
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var data in Model)
                    {
                        <p>@data.Title : @data.PhoneNumber</p>

                        <br />
                    }
                }
                else
                {
                    <p>Kayıtlı iletişim numarası bulunmamaktadır.</p>
                }
                <br /> <br />
                <p><b>Size en yakın okulumuz ile <a href="@Url.Action("Index","Schools")"><span style="color: red">buradan</span></a> iletişime geçebilirsiniz.</b></p>
                    
            </div>

        </div>
    </div>
</section>
@{
    ViewData["Title"] = "Okullarımız";
}
@model IEnumerable<Application.Models.SchoolModel>
<header class="site-header site-school-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-10 col-12 mx-auto">
                <h3 class="text-white">Okullarımız</h3>

                <strong class="text-white">Size en yakın okulumuzla iletişime geçebilirsiniz</strong>
            </div>

        </div>
    </div>

    <div class="overlay"></div>
</header>

<section class="school section-padding">
    <div class="container">
        <div class="row">
            @if (Model.Count() > 0)
            {
                foreach (var school in Model)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="school-thumb">
                            <div class="menu-info d-flex flex-wrap align-items-center">
                                <h4 class="mb-0">@school.DistrictName</h4>

                                <span class="price-tag bg-white shadow-lg ms-4">@school.CityName</span>

                                <div class="d-flex flex-wrap align-items-center w-100 mt-2">
                                    <p><b>Adres:</b> @school.Address</p><br />
                                    <p><b>İletişim:</b> @school.ContactNumber</p><br /><br />
                                    <p><a href="@Url.Action("Detail", new {schoolId = school.Id})">Detay Görüntüle --></a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }
            else
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <p>Kayıtlı okul bulunmamaktadır.</p>
                </div>
            }

        </div>
    </div>
</section>